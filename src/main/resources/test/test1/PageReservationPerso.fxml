<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="test.test1.PageReservationPerso"
      spacing="10.0">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <children>
        <Label text="Réservation voyage personnalisé"/>

        <GridPane hgap="4" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Email -->
            <Label text="Email"
                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="tfEmail"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Pays -->
            <Label text="Pays"
                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbPays"
                      GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Nombre de personnes -->
            <Label text="Nombre de personnes"
                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbNbPersonnes"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Activités -->
            <Label text="Activités"
                   GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbActivites"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Remarques -->
            <Label text="Remarques"
                   GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="taRemarques"
                      prefRowCount="4"
                      GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10.0">
            <Button text="Retour" onAction="#onRetour"/>
            <Button text="Réserver" onAction="#onValider"/>
        </HBox>
    </children>
</VBox>
